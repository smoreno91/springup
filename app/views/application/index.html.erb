<div class="pageWrapper">
  <!--Content Wrapper-->
  <div class="contentWrapper">
    <!--Home Section-->
    <section id="home" class="mainBanner parallax clearfix" data-background="<%= image_url('background.jpg') %>">
      <div class="parallax-overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="mainBanner-content">
              <div class="center-block">
                <%= image_tag("logo.png", alt: "logo") %>
              </div>
              <h1>Coming Soon</h1>
              <p>Our website is under construction, we are working very hard to give you the best experience.</p>
              <!-- Countdown -->
              <div class="clearfix" id="countdown" data-year="2017" data-month="5" data-day="12" data-padzeroes="true" data-format="DHMS"></div>
              <!-- /Countdown -->
              <div class="col-sm-6 col-sm-offset-3 col-xs-offset-0">
                <form class="notify-me clearfix" id="notifyme" action="#" method="post">
                  <div class="input-group">
                    <input type="email" placeholder="Enter Email Address" name="email" class="form-control">
                    <span class="input-group-btn">
                      <input type="submit" value="Submit" class="submit" disabled>
                    </span>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </section>
    <!--/ Home Section-->
  </div>
  <!--/ Content Wrapper-->
</div>